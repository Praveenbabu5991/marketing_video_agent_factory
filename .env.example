# ============================================
# Marketing Video Agent Factory - Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# Required: Google API Key (at least one is needed)
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here

# --- Model Configuration ---
DEFAULT_MODEL=gemini-2.5-flash

# Per-Agent Models (uncomment to override)
# ORCHESTRATOR_MODEL=gemini-2.5-flash
# VIDEO_AGENT_MODEL=gemini-2.5-flash
# ANIMATION_AGENT_MODEL=gemini-2.5-flash
# CAPTION_AGENT_MODEL=gemini-2.5-flash
VIDEO_MODEL=veo-3.1-generate-preview

# --- Server Configuration ---
HOST=0.0.0.0
PORT=5002
DEBUG=false

# --- Upload Limits ---
MAX_UPLOAD_SIZE_MB=10
MAX_USER_IMAGES=10
MAX_IMAGE_DIMENSION=4096

# --- Rate Limiting ---
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# --- Session ---
SESSION_TIMEOUT_HOURS=24
MAX_SESSIONS_PER_USER=10
